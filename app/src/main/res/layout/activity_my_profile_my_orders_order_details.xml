                        android:id="@+id/txtTotalAmount"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_width="110dp"
                        android:lineSpacingExtra="@dimen/_1pxh"
