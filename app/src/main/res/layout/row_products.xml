<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="productsRowModel" type="com.nguyenvansapplication.app.modules.favoritesmodules.data.model.ProductsRowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnclose"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical">
        <FrameLayout android:id="@+id/frameStacksettings"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_204pxv"
            android:layout_marginStart="@dimen/_1pxh" android:layout_width="@dimen/_163pxh">
            <FrameLayout android:id="@+id/frameStackclose"
                android:layout_gravity="top|center"
                android:layout_height="@dimen/_184pxv"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_1pxh"
                android:layout_marginStart="@dimen/_1pxh" android:layout_width="@dimen/_162pxh">
                <ImageView android:id="@+id/imageImage"
                    android:layout_gravity="start"
                    android:layout_height="@dimen/_184pxh"
                    android:layout_width="@dimen/_162pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_8pxh}"
                    imageRes="@{@drawable/img_image_27}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_image_27"/>
                <ImageView android:id="@+id/imageClose"
                    android:layout_gravity="top|end"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_9pxh"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="@dimen/_12pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_close_gray_500"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_close_gray_500"/>
            </FrameLayout>
            <ImageButton
                android:background="@drawable/rectangle_bg_red_700_radius_18"
                android:id="@+id/btnSettings"
                android:layout_gravity="bottom|end"
                android:layout_height="@dimen/_36pxh"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="@dimen/_36pxh"
                android:paddingHorizontal="@dimen/_11pxh"
                android:paddingVertical="@dimen/_11pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_settings_gray_50" tools:ignore="ContentDescription"/>
            <LinearLayout android:id="@+id/linearRowstar"
                android:layout_gravity="bottom|start"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageStar"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarOne"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarTwo"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarThree"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarFour"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_weight="0.22"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{productsRowModel.txtNumber}"
                    style="@style/txtMetropolisregular10" tools:text="@string/lbl_102"/>
            </LinearLayout>
        </FrameLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtBrandname"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_2pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{productsRowModel.txtBrandname}"
            style="@style/txtMetropolisregular11_1" tools:text="@string/lbl_lime"/>
        <TextView android:ellipsize="end" android:id="@+id/txtLanguage"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_1pxh"
            android:layout_marginTop="@dimen/_2pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{productsRowModel.txtLanguage}"
            style="@style/txtMetropolissemibold16" tools:text="@string/lbl_shirt2"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowcolor"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_1pxh"
            android:layout_marginTop="@dimen/_4pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end" android:id="@+id/txtColor"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.63" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{productsRowModel.txtColor}"
                style="@style/txtMetropolisregular11_1" tools:text="@string/lbl_color_blue"/>
            <TextView android:ellipsize="end" android:id="@+id/txtSize"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_25pxh"
                android:layout_weight="0.37" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{productsRowModel.txtSize}"
                style="@style/txtMetropolisregular11_1" tools:text="@string/lbl_size_l"/>
        </LinearLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtPrice"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_1pxh"
            android:layout_marginTop="@dimen/_6pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_1pxh"
            android:singleLine="true"
            android:text="@{productsRowModel.txtPrice}"
            style="@style/txtMetropolismedium14" tools:text="@string/lbl_10"/>
    </LinearLayout>
</layout>
