<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="catalogTwoRowModel" type="com.nguyenvansapplication.app.modules.catalogtwo.data.model.CatalogTwoRowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearProductcardca"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical">
        <FrameLayout android:id="@+id/frameStackstar"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_204pxv"
            android:layout_marginStart="@dimen/_1pxh" android:layout_width="@dimen/_162pxh">

            <ImageView
                android:id="@+id/imageImage"
                cornerRadius="@{@dimen/_8pxh}"
                imageRes="@{@drawable/img_image_184x162}"
                android:layout_width="@dimen/_162pxh"
                android:layout_height="@dimen/_184pxh"
                android:layout_gravity="top|start"
                android:layout_marginBottom="@dimen/_10pxv"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_image_184x162" />

            <LinearLayout android:id="@+id/linearRowstar"
                android:layout_gravity="bottom|start"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageStar"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarOne"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarTwo"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarThree"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarFour"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_weight="0.17"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{catalogTwoRowModel.txtNumber}"
                    style="@style/txtMetropolisregular10" tools:text="@string/lbl_3"/>
            </LinearLayout>
            <ImageButton
                android:background="@drawable/rectangle_bg_white_a700_radius_18"
                android:id="@+id/btnClock"
                android:layout_gravity="bottom|end"
                android:layout_height="@dimen/_36pxh"
                android:layout_marginBottom="@dimen/_4pxv"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="@dimen/_36pxh"
                android:paddingHorizontal="@dimen/_11pxh"
                android:paddingVertical="@dimen/_11pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_clock" tools:ignore="ContentDescription"/>
        </FrameLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtBrandname"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_1pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{catalogTwoRowModel.txtBrandname}"
            style="@style/txtMetropolisregular11_1" tools:text="@string/lbl_mango"/>
        <TextView android:ellipsize="end" android:id="@+id/txtLanguage"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_1pxh"
            android:layout_marginTop="@dimen/_3pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{catalogTwoRowModel.txtLanguage}"
            style="@style/txtMetropolissemibold16" tools:text="@string/lbl_t_shirt_spanish"/>
        <TextView android:ellipsize="end" android:id="@+id/txtPrice"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_2pxh"
            android:layout_marginTop="@dimen/_5pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_1pxh"
            android:singleLine="true"
            android:text="@{catalogTwoRowModel.txtPrice}"
            style="@style/txtMetropolismedium14" tools:text="@string/lbl_9"/>
    </LinearLayout>
</layout>
