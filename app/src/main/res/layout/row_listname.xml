<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="listnameRowModel" type="com.nguyenvansapplication.app.modules.ratingandreviews.data.model.ListnameRowModel"/>
    </data>
    <FrameLayout android:id="@+id/frameReview"
        android:layout_height="wrap_content" android:layout_width="match_parent">
        <LinearLayout android:id="@+id/linearColumnname"
            android:layout_gravity="bottom|end"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_11">
            <TextView android:ellipsize="end" android:id="@+id/txtName"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_19pxv"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:singleLine="true"
                android:text="@{listnameRowModel.txtName}"
                style="@style/txtMetropolissemibold14" tools:text="@string/lbl_helene_moore"/>
            <LinearLayout android:id="@+id/linearRowdate"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20pxh"
                android:layout_marginStart="@dimen/_23pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linearRowstarFifteen"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:layout_weight="0.52"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageStarFifteen"
                        android:layout_height="@dimen/_12pxh"
                        android:layout_width="@dimen/_13pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star_orange_300"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                    <ImageView android:id="@+id/imageStarOne"
                        android:layout_height="@dimen/_12pxh"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_width="@dimen/_13pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star_orange_300"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                    <ImageView android:id="@+id/imageStarTwo"
                        android:layout_height="@dimen/_12pxh"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_width="@dimen/_13pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star_orange_300"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                    <ImageView android:id="@+id/imageStarThree"
                        android:layout_height="@dimen/_12pxh"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_width="@dimen/_13pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star_orange_300"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                    <ImageView android:id="@+id/imageStarFour"
                        android:layout_height="@dimen/_12pxh"
                        android:layout_marginStart="@dimen/_2pxh"
                        android:layout_width="@dimen/_13pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_star"/>
                </LinearLayout>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtDate"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_127pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_weight="0.48"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{listnameRowModel.txtDate}"
                    style="@style/txtMetropolisregular11_1" tools:text="@string/lbl_june_5_2019"/>
            </LinearLayout>
            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtDescription"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20pxh"
                android:layout_marginStart="@dimen/_23pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_width="match_parent"
                android:text="@{listnameRowModel.txtDescription}"
                style="@style/txtMetropolisregular14_3" tools:text="@string/msg_the_dress_is_gr"/>
            <LinearLayout android:gravity="end"
                android:id="@+id/linearHelpfulbutton"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_17pxv"
                android:layout_marginEnd="@dimen/_15pxh"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_13pxv"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtHelpful"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_weight="0.74"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{listnameRowModel.txtHelpful}"
                    style="@style/txtMetropolisregular11_1" tools:text="@string/lbl_helpful"/>
                <ImageView android:id="@+id/imageVolume"
                    android:layout_height="@dimen/_13pxh"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:layout_marginStart="@dimen/_9pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_volume"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_volume"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/imageImageFive"
            android:layout_gravity="top|start"
            android:layout_height="@dimen/_32pxh"
            android:layout_marginBottom="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_width="@dimen/_32pxh"
            android:scaleType="centerCrop" circular="@{true}"
            imageRes="@{@drawable/img_image_32x32}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_image_32x32"/>
    </FrameLayout>
</layout>
