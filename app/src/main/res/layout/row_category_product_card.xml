<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="categoryProductCardRowModel" type="com.nguyenvansapplication.app.modules.productcard.data.model.CategoryProductCardRowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnlanguage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:orientation="vertical">
        <FrameLayout android:id="@+id/frameStacklanguage1"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_204pxv"
            android:layout_marginStart="@dimen/_1pxh" android:layout_width="180dp">
            <FrameLayout android:id="@+id/frameStacklanguage2"
                android:layout_gravity="top|center"
                android:layout_height="@dimen/_184pxv"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_marginStart="@dimen/_1pxh" android:layout_width="180dp">
                <ImageView
                    android:id="@+id/imageImageTwo"
                    cornerRadius="@{@dimen/_8pxh}"
                    android:layout_width="180dp"
                    android:layout_height="@dimen/_184pxh"
                    android:layout_gravity="start"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />

                <TextView android:ellipsize="end"
                    android:id="@+id/txtLanguage"
                    android:layout_gravity="top|start"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_9pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_6pxv"
                    android:paddingStart="@dimen/_5pxh"
                    android:paddingTop="@dimen/_6pxv"
                    android:singleLine="true"
                    android:text="@{categoryProductCardRowModel.txtLanguage}"
                    style="@style/txtSolidRounded_2" tools:text="@string/lbl_20"/>
            </FrameLayout>
            <LinearLayout android:id="@+id/linearRowstarFive"
                android:layout_gravity="bottom|start"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageStarFive"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarOne"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarTwo"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarThree"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <ImageView android:id="@+id/imageStarFour"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star_orange_300"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtNumberOne"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_weight="0.22"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{categoryProductCardRowModel.txtNumberOne}"
                    style="@style/txtMetropolisregular10" tools:text="@string/lbl_102"/>
            </LinearLayout>
            <ImageButton
                android:background="@drawable/rectangle_bg_white_a700_radius_18"
                android:id="@+id/btnClockOne"
                android:layout_gravity="bottom|end"
                android:layout_height="@dimen/_36pxh"
                android:layout_marginBottom="@dimen/_4pxv"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="30dp"
                android:layout_width="@dimen/_36pxh"
                android:paddingHorizontal="@dimen/_11pxh"
                android:paddingVertical="@dimen/_11pxv"
                android:scaleType="fitCenter"
                android:src="@drawable/img_clock" tools:ignore="ContentDescription"/>
        </FrameLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtBrandname"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_2pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{categoryProductCardRowModel.txtBrandname}"
            style="@style/txtMetropolisregular11_1" tools:text="@string/lbl_dorothy_perkins"/>
        <TextView android:ellipsize="end" android:id="@+id/txtItem"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_2pxh"
            android:layout_marginTop="@dimen/_4pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{categoryProductCardRowModel.txtItem}"
            style="@style/txtMetropolissemibold16" tools:text="@string/lbl_evening_dress"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearRowrectangleOne"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_3pxh"
            android:layout_marginTop="@dimen/_4pxv"
            android:layout_width="wrap_content" android:orientation="horizontal">
            <FrameLayout android:id="@+id/frameOldprice"
                android:layout_height="@dimen/_14pxv" android:layout_width="@dimen/_23pxh">
                <View android:background="@color/gray_500"
                    android:id="@+id/viewRectangleOne"
                    android:layout_gravity="bottom|start"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_6pxv"
                    android:layout_marginTop="@dimen/_10pxv" android:layout_width="@dimen/_23pxh"/>
                <TextView android:ellipsize="end"
                    android:gravity="top|start"
                    android:id="@+id/txtPriceOne1"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{categoryProductCardRowModel.txtPriceOne1}"
                    style="@style/txtMetropolismedium14_2" tools:text="@string/lbl_15"/>
            </FrameLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtPriceOne2"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4pxh"
                android:layout_weight="0.5" android:layout_width="0dp"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:singleLine="true"
                android:text="@{categoryProductCardRowModel.txtPriceOne2}"
                style="@style/txtMetropolismedium14_3" tools:text="@string/lbl_12"/>
        </LinearLayout>
    </LinearLayout>
</layout>
