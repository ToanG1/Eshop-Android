<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="listbrandnameRowModel" type="com.nguyenvansapplication.app.modules.favoriteslists.data.model.ListbrandnameRowModel"/>
    </data>
    <FrameLayout android:id="@+id/frameProductcardLi"
        android:layout_height="wrap_content" android:layout_width="match_parent">
        <LinearLayout android:id="@+id/linearRowclose"
            android:layout_gravity="top|start"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal" style="@style/groupStylewhite_3">
            <LinearLayout android:id="@+id/linearRowbrandname"
                android:layout_height="wrap_content"
                android:layout_weight="0.96" android:layout_width="0dp" android:orientation="horizontal">
                <FrameLayout android:id="@+id/framePhoto"
                    android:layout_height="@dimen/_104pxv" android:layout_width="@dimen/_104pxh">
                    <ImageView android:id="@+id/imageImageOne"
                        android:layout_gravity="start"
                        android:layout_height="@dimen/_104pxh"
                        android:layout_width="@dimen/_104pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_8pxh}"
                        tools:ignore="ContentDescription"/>
                </FrameLayout>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearColumnbrandname"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_13pxv"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:layout_weight="0.63"
                    android:layout_width="0dp" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtItem"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:textSize="19sp"
                        android:text="@{listbrandnameRowModel.txtItem}"
                        style="@style/txtMetropolissemibold16" tools:text="@string/lbl_shirt"/>
                    <LinearLayout android:id="@+id/linearRowprice"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14pxv"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtPrice"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.22"
                            android:layout_width="0dp"
                            android:lineSpacingExtra="@dimen/_1pxh"
                            android:singleLine="true"
                            android:text="@{listbrandnameRowModel.txtPrice}"
                            style="@style/txtMetropolismedium14" tools:text="@string/lbl_32"/>
                        <LinearLayout android:id="@+id/linearRowstar"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_marginStart="@dimen/_55pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_weight="0.78"
                            android:layout_width="0dp" android:orientation="horizontal">
                            <ImageView android:id="@+id/imageStar"
                                android:layout_height="@dimen/_12pxh"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_width="@dimen/_13pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_star_orange_300"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                            <ImageView android:id="@+id/imageStarOne"
                                android:layout_height="@dimen/_12pxh"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_marginStart="@dimen/_2pxh"
                                android:layout_width="@dimen/_13pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_star_orange_300"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                            <ImageView android:id="@+id/imageStarTwo"
                                android:layout_height="@dimen/_12pxh"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_marginStart="@dimen/_2pxh"
                                android:layout_width="@dimen/_13pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_star_orange_300"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                            <ImageView android:id="@+id/imageStarThree"
                                android:layout_height="@dimen/_12pxh"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_marginStart="@dimen/_2pxh"
                                android:layout_width="@dimen/_13pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_star_orange_300"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                            <ImageView android:id="@+id/imageStarFour"
                                android:layout_height="@dimen/_12pxh"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_marginStart="@dimen/_2pxh"
                                android:layout_width="@dimen/_13pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_star_orange_300"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_star_orange_300"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtNumber"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2pxh"
                                android:layout_marginTop="@dimen/_2pxv"
                                android:layout_weight="0.22"
                                android:layout_width="0dp"
                                android:lineSpacingExtra="@dimen/_1pxh"
                                android:singleLine="true"
                                android:text="@{listbrandnameRowModel.txtNumber}"
                                style="@style/txtMetropolisregular10" tools:text="@string/lbl_102"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView android:id="@+id/imageClose"
                android:layout_height="@dimen/_12pxh"
                android:layout_marginBottom="@dimen/_78pxv"
                android:layout_marginEnd="@dimen/_13pxh"
                android:layout_marginStart="@dimen/_27pxh"
                android:layout_marginTop="@dimen/_14pxv"
                android:layout_width="@dimen/_12pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_close_gray_500"
                tools:ignore="ContentDescription" tools:src="@drawable/img_close_gray_500"/>
        </LinearLayout>
        <ImageButton
            android:background="@drawable/rectangle_bg_red_700_radius_18"
            android:id="@+id/btnSettings"
            android:layout_gravity="bottom|end"
            android:layout_height="@dimen/_36pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="@dimen/_36pxh"
            android:paddingHorizontal="@dimen/_11pxh"
            android:paddingVertical="@dimen/_11pxv"
            android:scaleType="fitCenter"
            android:src="@drawable/img_settings_gray_50" tools:ignore="ContentDescription"/>
    </FrameLayout>
</layout>
